# IMPORTANTE: Gere uma SECRET_KEY segura
# Exemplo: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=troque-por-uma-chave-forte

# Porta pública interna do container (Nginx)
PORT=8082

# Ambiente
FLASK_ENV=production
DEBUG=False

# Segurança / CORS
CORS_ORIGINS=*

# Limites
MAX_VIDEO_DURATION=3600
MAX_FILE_SIZE=524288000
TEMP_FILE_RETENTION=3600

# Rate limit
RATE_LIMIT_ENABLED=False
RATE_LIMIT_PER_MINUTE=10
